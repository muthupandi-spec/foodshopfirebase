<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@null</item>

    </style>
    <style name="TabLayoutStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:background">@color/White</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>

    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textColor">@color/LightGrey</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="headertext" parent="@style/TextAppearance.MaterialComponents.Tooltip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Black</item>
       <!-- <item name="android:fontFamily">...</item>
        <item name="fontFamily">...</item>-->
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="Edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">@color/LightGrey</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@drawable/custom_border</item>
        <!--<item name="android:fontFamily">@font/poppins_medium</item>-->
    </style>

    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textColor">@drawable/radio_flat</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
    </style>
<style name="RoundedCorner10dp" parent="">
<item name="cornerFamily">rounded</item>
<item name="cornerSize">10dp</item>
</style>
</resources>
