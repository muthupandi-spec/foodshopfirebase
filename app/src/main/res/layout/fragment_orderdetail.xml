                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="@id/logRMargin"
                    app:layout_constraintStart_toStartOf="@id/logLMargin"
                    app:layout_constraintTop_toBottomOf="@+id/orderid">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/LMargin1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.04" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/RMargin1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.96" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/TMargin1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.06" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/BMargin1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.94" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/foodImg1"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toTopOf="@+id/view3"
                            app:layout_constraintLeft_toLeftOf="@+id/LMargin1"
                            app:layout_constraintTop_toTopOf="@+id/TMargin1">

                            <ImageView
                                android:id="@+id/foodImgBg1"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:src="@drawable/ic_samplefood"
                                android:scaleType="centerCrop"
                                tools:ignore="ContentDescription" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/orderid1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="@color/Semi_Black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toRightOf="@+id/foodImg1"
                            app:layout_constraintTop_toTopOf="@+id/foodImg1" />

                        <TextView
                            android:id="@+id/restaurantname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toRightOf="@+id/foodImg1"
                            app:layout_constraintTop_toBottomOf="@+id/orderid1"
                            tools:ignore="TextSizeCheck" />


                        <TextView
                            android:id="@+id/foodCount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:text="2 item"
                            app:layout_constraintBottom_toTopOf="@+id/foodCost1"
                            app:layout_constraintStart_toStartOf="@+id/restaurantname"
                            app:layout_constraintTop_toBottomOf="@+id/restaurantname"
                            tools:ignore="TextSizeCheck" />

                        <View
                            android:id="@+id/view11"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="12dp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@color/Gray"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="@+id/foodCount1"
                            app:layout_constraintLeft_toRightOf="@+id/foodCount1"
                            app:layout_constraintTop_toTopOf="@+id/foodCount1" />

                        <TextView
                            android:id="@+id/km1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="@string/_2_4km"
                            android:textSize="@dimen/_11sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/foodCount1"
                            app:layout_constraintLeft_toLeftOf="@+id/view11"
                            app:layout_constraintTop_toTopOf="@+id/foodCount1" />

                        <TextView
                            android:id="@+id/foodCost1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="4$"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/foodImg1"
                            app:layout_constraintStart_toStartOf="@+id/foodCount1"
                            app:layout_constraintTop_toBottomOf="@+id/foodCount1"
                            app:layout_constraintVertical_chainStyle="spread" />

                        <TextView
                            android:id="@+id/status1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/text_view_with_bgcolor"
                            android:paddingStart="@dimen/_10sdp"
                            android:text="active"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/foodCost1"
                            app:layout_constraintLeft_toRightOf="@+id/foodCost1"
                            app:layout_constraintTop_toTopOf="@+id/foodCost1" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/LightGrey"
                            app:layout_constraintLeft_toLeftOf="@+id/LMargin1"
                            app:layout_constraintRight_toRightOf="@+id/RMargin1"
                            app:layout_constraintTop_toBottomOf="@+id/foodImg1" />

                        <TextView
                            android:id="@+id/location1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:maxLines="2"
                            android:text="oasis dubai"
                            android:textColor="@color/Semi_Black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal"
                            app:layout_constraintLeft_toLeftOf="@+id/LMargin1"
                            app:layout_constraintRight_toRightOf="@id/RMargin1"
                            app:layout_constraintTop_toBottomOf="@+id/view3"
                            app:drawableStartCompat="@drawable/location" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/help"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/button_alter"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="@string/help"
                            android:textAllCaps="false"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/RMargin1"
                            app:layout_constraintStart_toStartOf="@id/LMargin1"
                            app:layout_constraintTop_toBottomOf="@id/location1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@+id/help" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@color/White"
                    android:backgroundTint="@color/White"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="@id/logRMargin"
                    app:layout_constraintStart_toStartOf="@id/logLMargin"
                    app:layout_constraintTop_toBottomOf="@+id/orderrv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/detailcontainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/orderdetailtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/orderdetails"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal"
                            app:layout_constraintStart_toStartOf="@id/detailcontainer"
                            app:layout_constraintTop_toTopOf="@id/detailcontainer"
                            tools:ignore="TextSizeCheck" />

                        <ImageView
                            android:id="@+id/viewdetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow___down_2"
                            app:layout_constraintEnd_toEndOf="@id/detailcontainer"
                            app:layout_constraintTop_toTopOf="@id/detailcontainer" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_textview_line"
                            app:layout_constraintStart_toStartOf="@id/detailcontainer"
                            app:layout_constraintTop_toBottomOf="@id/orderdetailtxt" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/foodlist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/detailcontainer"
                            app:layout_constraintTop_toBottomOf="@id/view"
