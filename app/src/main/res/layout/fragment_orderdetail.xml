                            tools:listitem="@layout/fooditemadapter" />

                        <TextView
                            android:id="@+id/deliverytxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/delcharge"
                            android:textColor="@color/Black"
                            android:textFontWeight="500"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal"
                            app:layout_constraintStart_toStartOf="@id/detailcontainer"
                            app:layout_constraintTop_toBottomOf="@id/foodlist"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/deliveryamt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="0.3$"
                            android:textColor="@color/Black"
                            android:textFontWeight="500"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="@id/detailcontainer"
                            app:layout_constraintTop_toBottomOf="@id/foodlist"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/promotxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/promocode"
                            android:textColor="@color/Black"
                            android:textFontWeight="500"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal"
                            app:layout_constraintStart_toStartOf="@id/detailcontainer"
                            app:layout_constraintTop_toBottomOf="@id/deliverytxt"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/promovalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="0.1$"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="@id/detailcontainer"
                            app:layout_constraintTop_toBottomOf="@id/deliverytxt"
                            tools:ignore="TextSizeCheck" />

                        <TextView
