                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLines="2"
                    android:text="@string/declineorder"
                    android:textColor="@color/Semi_Black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/logRMargin"
                    app:layout_constraintStart_toStartOf="@+id/logLMargin"
                    app:layout_constraintTop_toTopOf="@+id/logTMargin" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cancelCV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/White"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toBottomOf="@+id/decline">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/LMargin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.04" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/RMargin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.96" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/TMargin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.06" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/BMargin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.94" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/foodImg"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:layout_constraintBottom_toTopOf="@+id/view2"
                            app:layout_constraintLeft_toLeftOf="@+id/LMargin"
                            app:layout_constraintTop_toTopOf="@+id/TMargin">

                            <ImageView
                                android:id="@+id/foodImgBg"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:background="@drawable/ic_samplefood"
                                android:scaleType="centerCrop"
                                tools:ignore="ContentDescription" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/orderidd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Order ID:154444"
                            android:textColor="@color/Semi_Black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toRightOf="@+id/foodImg"
                            app:layout_constraintTop_toTopOf="@+id/foodImg" />

                        <TextView
                            android:id="@+id/restaurantnam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="Veg noodles"
                            android:textColor="@color/Black"
                            android:textFontWeight="500"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            app:layout_constraintLeft_toRightOf="@+id/foodImg"
                            app:layout_constraintTop_toBottomOf="@+id/orderidd"
                            tools:ignore="TextSizeCheck" />


                        <TextView
                            android:id="@+id/foodCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_3_items"
                            android:textSize="@dimen/_11sdp"
                            app:layout_constraintBottom_toTopOf="@+id/foodCost"
                            app:layout_constraintStart_toStartOf="@+id/restaurantnam"
                            app:layout_constraintTop_toBottomOf="@+id/restaurantnam"
                            tools:ignore="TextSizeCheck" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="12dp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@color/Gray"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="@+id/foodCount"
                            app:layout_constraintLeft_toRightOf="@+id/foodCount"
                            app:layout_constraintTop_toTopOf="@+id/foodCount" />

                        <TextView
                            android:id="@+id/km"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="@string/_2_4km"
                            android:textSize="@dimen/_11sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/foodCount"
                            app:layout_constraintLeft_toLeftOf="@+id/view1"
                            app:layout_constraintTop_toTopOf="@+id/foodCount" />

                        <TextView
                            android:id="@+id/foodCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_42_22"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/foodImg"
                            app:layout_constraintStart_toStartOf="@+id/foodCount"
                            app:layout_constraintTop_toBottomOf="@+id/foodCount"
                            app:layout_constraintVertical_chainStyle="spread" />

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/text_view_with_bgcolor"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="cod"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/foodCost"
                            app:layout_constraintLeft_toRightOf="@+id/foodCost"
                            app:layout_constraintTop_toTopOf="@+id/foodCost" />

                        <View
