<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/mapFrag"
            android:orientation="vertical"
            android:background="@color/LightGrey"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/back_arrow"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/Semi_Black"
                    android:textSize="@dimen/_14sdp"
                    android:text="Track Order"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/backBtn"
                    />
            </LinearLayout>
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <!-- Food Image -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/foodImg"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="3dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:id="@+id/foodImgBg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/location" />
                    </androidx.cardview.widget.CardView>

                    <!-- Order ID -->
                    <TextView
                        android:id="@+id/orderid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="Order #12245"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="@+id/foodImg"
                        app:layout_constraintStart_toEndOf="@+id/foodImg"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Food Name -->
                    <TextView
                        android:id="@+id/foodName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="Chicken Biryani • Combo Pack"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:maxLines="2"
                        app:layout_constraintTop_toBottomOf="@+id/orderid"
                        app:layout_constraintStart_toEndOf="@+id/foodImg"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Count -->
                    <TextView
                        android:id="@+id/foodCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="2 Items"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        app:layout_constraintTop_toBottomOf="@+id/foodName"
                        app:layout_constraintStart_toEndOf="@+id/foodImg" />

                    <!-- Price -->
                    <TextView
                        android:id="@+id/foodCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹320"
                        android:textStyle="bold"
                        android:textColor="#00A559"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/foodCount"
                        app:layout_constraintStart_toStartOf="@+id/foodCount" />

                    <!-- Status Badge -->
                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assigned"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:background="@drawable/button_alter"
                        app:layout_constraintStart_toEndOf="@+id/foodCost"
                        app:layout_constraintBottom_toBottomOf="@+id/foodCost"/>

                    <!-- Track Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/trackOrderBtn"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_alter"
                        android:text="Track Order"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/foodImg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/cancelBtn" />

                    <!-- Accept / Cancel Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancelBtn"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_alter"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toEndOf="@+id/trackOrderBtn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/foodImg" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/White"
                android:backgroundTint="@color/White"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="@id/logRMargin"
                app:layout_constraintStart_toStartOf="@id/logLMargin"
                app:layout_constraintTop_toBottomOf="@+id/orderrv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detailcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/orderdetailtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Details"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@id/detailcontainer"
                        app:layout_constraintTop_toTopOf="@id/detailcontainer"
                        tools:ignore="TextSizeCheck" />

                    <ImageView
                        android:id="@+id/viewdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow___down_2"
                        app:layout_constraintEnd_toEndOf="@id/detailcontainer"
                        app:layout_constraintTop_toTopOf="@id/detailcontainer" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/custom_textview_line"
                        app:layout_constraintStart_toStartOf="@id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/orderdetailtxt" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/foodlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/view"
                        tools:itemCount="1"
                        tools:listitem="@layout/fooditemadapter" />

                    <TextView
                        android:id="@+id/deliverytxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Delivery Charge"
                        android:textColor="@color/Black"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/foodlist"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/deliveryamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="0.3$"
                        android:textColor="@color/Black"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="@id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/foodlist"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/promotxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Promo Code"
                        android:textColor="@color/Black"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/deliverytxt"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/promovalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="0.1$"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="@id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/deliverytxt"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/adminchargetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Admin Charge"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/promotxt"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/adminchargevalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="0.22$"
                        android:textColor="@color/Black"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="@id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/promovalue"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/totaltxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Total"
                        android:textColor="@color/Black"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/adminchargetxt"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/totalvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="3$"
                        android:textColor="@color/Black"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="@id/detailcontainer"
                        app:layout_constraintTop_toBottomOf="@id/adminchargevalue"
                        tools:ignore="TextSizeCheck" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"

                        app:constraint_referenced_ids="deliveryamt,
                totaltxt,totalvalue,promotxt,promovalue,view,deliverytxt,adminchargetxt,adminchargevalue" />




                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </RelativeLayout>

</layout>
