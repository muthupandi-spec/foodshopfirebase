<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <!-- Food Image -->
            <androidx.cardview.widget.CardView
                android:id="@+id/foodImg"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="12dp"
                android:elevation="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/foodImgBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_samplefood" />
            </androidx.cardview.widget.CardView>

            <!-- Order ID -->
            <TextView
                android:id="@+id/orderid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="Order #12245"
                android:textStyle="bold"
                android:textColor="#212121"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="@+id/foodImg"
                app:layout_constraintStart_toEndOf="@+id/foodImg"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Food Name -->
            <TextView
                android:id="@+id/foodName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="Chicken Biryani • Combo Pack"
                android:textSize="14sp"
                android:textColor="#444444"
                android:maxLines="2"
                app:layout_constraintTop_toBottomOf="@+id/orderid"
                app:layout_constraintStart_toEndOf="@+id/foodImg"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/otp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="Chicken Biryani • Combo Pack"
                android:textSize="14sp"
                android:textColor="#444444"
                android:maxLines="2"
                app:layout_constraintTop_toBottomOf="@+id/foodName"
                app:layout_constraintStart_toEndOf="@+id/foodImg"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Count -->
            <TextView
                android:id="@+id/foodCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="2 Items"
                android:textSize="12sp"
                android:textColor="#777777"
                app:layout_constraintTop_toBottomOf="@+id/otp"
                app:layout_constraintStart_toEndOf="@+id/foodImg" />

            <!-- Price -->
            <TextView
                android:id="@+id/foodCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹320"
                android:textStyle="bold"
                android:textColor="#00A559"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/foodCount"
                app:layout_constraintStart_toStartOf="@+id/foodCount" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:background="@drawable/button_alter"
                app:layout_constraintStart_toEndOf="@+id/foodCost"
                app:layout_constraintBottom_toBottomOf="@+id/foodCost"/>

            <!-- Track Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/statusbtnn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/button_alter"
                android:text="Track Order"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cancelBtn" />

            <!-- Accept / Cancel Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelBtn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/button_alter"
                android:text="Accept"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/statusbtnn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/foodImg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
