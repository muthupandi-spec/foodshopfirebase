<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/notificationAd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_15sdp"
 >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/notAdpTMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/notAdpBMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notificationProfile"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notAdpTMargin">

        <ImageView
            android:id="@+id/cartBtn"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_samplefood"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/notSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="Orders Successful!"
        android:textColor="@color/Semi_Black"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/notificationProfile"
        app:layout_constraintTop_toTopOf="@+id/notAdpTMargin" />

    <TextView
        android:id="@+id/notDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="19 Dec 2022"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintLeft_toRightOf="@+id/notificationProfile"
        app:layout_constraintStart_toStartOf="@+id/notSuccess"
        app:layout_constraintTop_toBottomOf="@+id/notSuccess" />

    <View
        android:id="@+id/notView"
        android:layout_width="2dp"
        android:layout_height="9dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:background="@color/LightGrey"
        app:layout_constraintLeft_toRightOf="@+id/notDate"
        app:layout_constraintTop_toBottomOf="@+id/notSuccess" />

    <TextView
        android:id="@+id/notTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="19:19 PM"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintLeft_toRightOf="@+id/notView"
        app:layout_constraintTop_toBottomOf="@+id/notSuccess" />

    <TextView
        android:id="@+id/newNotification"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="@dimen/_6sdp"
        android:background="@drawable/text_view_with_bgcolor"
        android:textColor="@color/White"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notAdpTMargin"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_10sdp"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notificationProfile"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>