<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/LMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/RMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/TMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/BMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.97" />

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/LMargin"
                app:layout_constraintTop_toTopOf="@id/TMargin"
                android:background="@drawable/back_arrow"/>

            <ImageView
                android:id="@+id/header"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@color/transparent"
                android:src="@drawable/ic_logo"
                app:layout_constraintLeft_toLeftOf="@+id/LMargin"
                app:layout_constraintRight_toRightOf="@+id/RMargin"
                app:layout_constraintTop_toTopOf="@+id/TMargin" />

            <TextView
                android:id="@+id/headerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/transparent"
                android:text="@string/otp_verification"
                android:textColor="@color/Black"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintLeft_toLeftOf="@+id/LMargin"
                app:layout_constraintRight_toRightOf="@+id/RMargin"
                app:layout_constraintTop_toBottomOf="@+id/header" />

            <TextView
                android:id="@+id/otp_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/transparent"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintLeft_toLeftOf="@+id/LMargin"
                app:layout_constraintRight_toRightOf="@+id/RMargin"
                app:layout_constraintTop_toBottomOf="@+id/headerName" />

            <com.mukesh.OtpView
                android:id="@+id/otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/transparent"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:itemBackground="@drawable/custom_selected_textview"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                app:itemCount="6"
                app:itemHeight="@dimen/_32sdp"
                app:itemRadius="@dimen/_5sdp"
                app:itemSpacing="@dimen/_5sdp"
                app:itemWidth="@dimen/_36sdp"
                app:layout_constraintLeft_toLeftOf="@+id/LMargin"
                app:layout_constraintRight_toRightOf="@+id/RMargin"
                app:layout_constraintTop_toBottomOf="@+id/otp_details" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_otp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/button_alter"
                android:text="submit"
                android:textColor="@color/White"
                app:layout_constraintBottom_toBottomOf="@+id/BMargin"
                app:layout_constraintLeft_toLeftOf="@+id/LMargin"
                app:layout_constraintRight_toRightOf="@+id/RMargin"
                app:layout_constraintTop_toBottomOf="@+id/otp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>