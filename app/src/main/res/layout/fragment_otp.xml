<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/White"
    android:focusable="true"
 >


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/accLMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/accRMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/accTMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/accBMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />


    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="@+id/accLMargin"
        app:layout_constraintTop_toTopOf="@+id/accTMargin"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/accountHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="@string/otp_verification"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        app:layout_constraintLeft_toRightOf="@+id/backBtn"
        app:layout_constraintTop_toTopOf="@+id/accTMargin" />
    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="@dimen/_150sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintLeft_toLeftOf="@+id/accLMargin"
        app:layout_constraintRight_toRightOf="@+id/accRMargin"
        app:layout_constraintTop_toTopOf="@+id/accTMargin"
        android:src="@drawable/ic_logo"/>
    <TextView
        android:id="@+id/otpverification"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="@string/otp_verification"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        app:layout_constraintLeft_toLeftOf="@+id/accLMargin"
        app:layout_constraintRight_toRightOf="@+id/accRMargin"
        app:layout_constraintTop_toBottomOf="@+id/image" />
    <com.mukesh.OtpView
        android:id="@+id/otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/transparent"
        android:focusableInTouchMode="true"
        android:inputType="number"
        android:itemBackground="@drawable/custom_selected_textview"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        app:itemCount="5"
        app:itemHeight="@dimen/_32sdp"
        app:itemRadius="@dimen/_5sdp"
        app:itemSpacing="@dimen/_5sdp"
        app:itemWidth="@dimen/_36sdp"
        app:layout_constraintLeft_toLeftOf="@+id/accLMargin"
        app:layout_constraintRight_toRightOf="@+id/accRMargin"
        app:layout_constraintTop_toBottomOf="@+id/otpverification" />

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/custom_border"
        android:imeOptions="actionDone"
        android:textAllCaps="false"
        android:text="@string/next"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@id/accRMargin"
        app:layout_constraintStart_toStartOf="@id/accLMargin"
        app:layout_constraintBottom_toBottomOf="@+id/accBMargin"
        tools:ignore="TextViewEdits" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/loder"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
