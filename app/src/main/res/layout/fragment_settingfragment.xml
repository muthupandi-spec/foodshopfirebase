<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout 
    android:id="@+id/profilepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:clickable="true"
    android:focusable="true"
   >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/accLMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/accRMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/accTMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.02" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/accBMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.98" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolabarcontainer"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintEnd_toEndOf="@id/accRMargin"
                app:layout_constraintStart_toStartOf="@id/accLMargin"
                app:layout_constraintTop_toTopOf="@id/accTMargin">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/back_arrow"
                    app:layout_constraintBottom_toBottomOf="@+id/toolabarcontainer"
                    app:layout_constraintStart_toStartOf="@+id/toolabarcontainer"
                    app:layout_constraintTop_toTopOf="@+id/toolabarcontainer"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/accountHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:textColor="@color/Black"
                    android:text="@string/accsetting"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/toolabarcontainer"
                    app:layout_constraintLeft_toRightOf="@+id/backBtn"
                    app:layout_constraintTop_toTopOf="@+id/toolabarcontainer" />

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/notification"
                    android:padding="@dimen/_45sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/toolabarcontainer"
                    app:layout_constraintEnd_toEndOf="@+id/toolabarcontainer"
                    app:layout_constraintTop_toTopOf="@+id/toolabarcontainer"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logoutcontainer"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_45sdp"
                app:layout_constraintTop_toBottomOf="@+id/toolabarcontainer"
                app:layout_constraintStart_toStartOf="@id/accLMargin"
                app:layout_constraintEnd_toEndOf="@id/accRMargin">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="@id/logoutcontainer"
                    app:layout_constraintTop_toTopOf="@+id/logoutcontainer"
                    app:layout_constraintBottom_toBottomOf="@+id/logoutcontainer"
                    android:src="@drawable/logout"
                    app:tint="@color/colorPrimary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout1"
                    android:textColor="@color/Black"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="@id/logoutcontainer"
                    app:layout_constraintStart_toEndOf="@id/profile"
                    app:layout_constraintTop_toTopOf="@id/logoutcontainer"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/logoutcontainer"
                    android:src="@drawable/sideicon"
                    app:layout_constraintEnd_toEndOf="@id/logoutcontainer"
                    app:layout_constraintBottom_toBottomOf="@id/logoutcontainer"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/deletaccountcontainer"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_45sdp"
                app:layout_constraintTop_toBottomOf="@+id/logoutcontainer"
                app:layout_constraintStart_toStartOf="@id/accLMargin"
                app:layout_constraintEnd_toEndOf="@id/accRMargin">

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="@id/deletaccountcontainer"
                    app:layout_constraintTop_toTopOf="@+id/deletaccountcontainer"
                    app:layout_constraintBottom_toBottomOf="@+id/deletaccountcontainer"
                    android:src="@drawable/deleteicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deleteacc"
                    android:textStyle="normal"
                    android:textColor="@color/Black"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="@id/deletaccountcontainer"
                    app:layout_constraintStart_toEndOf="@id/delete"
                    app:layout_constraintTop_toTopOf="@id/deletaccountcontainer"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/deletaccountcontainer"
                    android:src="@drawable/sideicon"
                    app:layout_constraintEnd_toEndOf="@id/deletaccountcontainer"
                    app:layout_constraintBottom_toBottomOf="@id/deletaccountcontainer"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_alter"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/accBMargin"
                app:layout_constraintStart_toStartOf="@+id/accLMargin"
                app:layout_constraintEnd_toEndOf="@+id/accRMargin"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/loder"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>