<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/accLMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/accRMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/accTMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/accBMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.98" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolabarcontainer"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintEnd_toEndOf="@id/accRMargin"
            app:layout_constraintStart_toStartOf="@id/accLMargin"
            app:layout_constraintTop_toTopOf="@id/accTMargin">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/back_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/toolabarcontainer"
                app:layout_constraintStart_toStartOf="@+id/toolabarcontainer"
                app:layout_constraintTop_toTopOf="@+id/toolabarcontainer"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/accountHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/productcate"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/backBtn"
                app:layout_constraintLeft_toRightOf="@+id/backBtn"
                app:layout_constraintTop_toTopOf="@+id/backBtn" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/plus"
                android:padding="@dimen/_45sdp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/toolabarcontainer"
                app:layout_constraintEnd_toEndOf="@+id/toolabarcontainer"
                app:layout_constraintTop_toTopOf="@+id/toolabarcontainer"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/search"
                android:padding="@dimen/_45sdp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/toolabarcontainer"
                app:layout_constraintEnd_toStartOf="@+id/plus"
                app:layout_constraintTop_toTopOf="@id/toolabarcontainer"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <RadioGroup
            android:id="@+id/radiogrp"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/White"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="@id/accRMargin"
            app:layout_constraintStart_toStartOf="@id/accLMargin"
            app:layout_constraintTop_toBottomOf="@id/toolabarcontainer">

            <RadioButton
                android:id="@+id/active"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:checked="true"
                android:buttonTint="@color/colorPrimary"
                android:text="Active Food" />

            <RadioButton
                android:id="@+id/inactive"
                android:layout_weight="1"
                android:buttonTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:text="Inactive Food"
                android:layout_height="@dimen/_45sdp"  />              android:text="Inactive" />

        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendChipRC"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="16sp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@id/accRMargin"
            app:layout_constraintStart_toStartOf="@id/accLMargin"
            app:layout_constraintTop_toBottomOf="@id/radiogrp"
            tools:listitem="@layout/productcategoryadapter" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productrecyclerview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@id/accBMargin"
            app:layout_constraintEnd_toEndOf="@id/accRMargin"
            app:layout_constraintStart_toStartOf="@id/accLMargin"
            app:layout_constraintTop_toBottomOf="@id/recommendChipRC"
            tools:listitem="@layout/productcategoryadapter" />
        <ImageView
            android:id="@+id/emptyimg"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_pic"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/emptytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/empty"
            android:textColor="@color/Semi_Black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emptyimg" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</layout>