<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/colorPrimary" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="@color/LightBlue" />

    <!-- Padding inside the box -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
